<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!-- Ilustración superior (reemplazar drawable por tu imagen) -->

    <!-- Mensaje principal -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Tu recordatorio de\nmedicamentos"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="368dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Organiza tus tomas, recibe recordatorios y\nmantén tu salud bajo control."
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Iniciar sesión (activo) -->
    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text="Iniciar sesión"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Registrarse (deshabilitado estilo claro) -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#AEBFC0"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>